#set $purge_cliphist [ $purge_cliphist_logout == 'true' ] && rm -f $HOME/.cache/cliphist/db || exit 0

mode --pango_markup "lOck/Logout/Shutdown/Reboot" {
    # lock
    bindsym o mode "default" exec blurlock 
    
    # logout
    bindsym l mode "default" exec loginctl terminate-user $USER

    # shutdown
    bindsym s mode "default" exec systemctl poweroff

    # reboot
    bindsym r mode "default" exec systemctl reboot

    # Return to default mode.
    bindsym Escape mode "default"
}

## Launch // Exit Menu ##
bindsym $mod+shift+q mode "lOck/Logout/Shutdown/Reboot"


